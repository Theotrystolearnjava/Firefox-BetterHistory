{
  "manifest_version": 2,
  "author": "Squip9946",
  "name": "Better History",
  "version": "0.1",
  
  "description": "Adds a better browser history, currently aimed to resemble the Chromium one",
  
  "homepage_url": "https://github.com/Theotrystolearnjava/Firefox-BetterHistory/tree/main",
  
  
  "icons": {
    "48": "icons/betterhistory-48.png",
    "96": "icons/betterhistory-96.png"
  },
  
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "icons/betterhistory-48.png"
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "commands": {
    "open-better-history": {
      "suggested_key": {
        "default": "Ctrl+Alt+H"
      }
    }
  },
  
  "permissions": [
    "history",
    "storage",
    "tabs"
  ]
}
